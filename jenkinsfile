pipeline {
    agent { label 'windows' } // Replace with your actual agent label

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/Deep7k/MyProject', branch: 'master' // Replace with your repo URL and branch
            }
        }

        stage('Build WAR') {
            steps {
                bat 'gradle clean build' // Use gradlew.bat for Windows
            }
        }

        stage('Archive WAR') {
            steps {
                archiveArtifacts artifacts: '**/*.war', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
